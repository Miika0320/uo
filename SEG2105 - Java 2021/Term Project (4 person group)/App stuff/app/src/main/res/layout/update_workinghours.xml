<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textSize="40dp"
                tools:layout_editor_absoluteX="-6dp"
                tools:layout_editor_absoluteY="368dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mondayOpen"
                    android:layout_width="185dp"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Enter opening time"
                    android:inputType="time"
                    tools:layout_editor_absoluteY="52dp" />

                <EditText
                    android:id="@+id/mondayClose"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Enter closing time"
                    android:inputType="time"
                    tools:layout_editor_absoluteY="52dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:textSize="40dp"
                tools:layout_editor_absoluteX="-6dp"
                tools:layout_editor_absoluteY="368dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tuesdayOpen"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter opening time"
                    android:inputType="time"
                    android:minHeight="48dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="409dp" />

                <EditText
                    android:id="@+id/tuesdayClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter closing time"
                    android:inputType="time"
                    android:minHeight="48dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="409dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="442dp"
                android:layout_height="52dp"
                android:text="Wednesday"
                android:textSize="40dp"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="180dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/wednesdayOpen"
                    android:layout_width="169dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Enter opening time"
                    android:inputType="time"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="232dp" />

                <EditText
                    android:id="@+id/wednesdayClose"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Enter closing time"
                    android:inputType="time"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="232dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="442dp"
                android:layout_height="52dp"
                android:text="Thursday"
                android:textSize="40dp"
                tools:layout_editor_absoluteX="-2dp"
                tools:layout_editor_absoluteY="274dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/thursdayOpen"
                    android:layout_width="185dp"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:hint="Enter opening time"
                    android:inputType="time"
                    tools:layout_editor_absoluteX="-2dp"
                    tools:layout_editor_absoluteY="489dp" />

                <EditText
                    android:id="@+id/thursdayClose"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Enter closing time"
                    android:inputType="time"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="232dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="422dp"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:textSize="40dp"
                tools:layout_editor_absoluteX="-6dp"
                tools:layout_editor_absoluteY="368dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fridayOpen"
                    android:layout_width="168dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Enter opening time"
                    android:inputType="time"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="146dp" />

                <EditText
                    android:id="@+id/fridayClose"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter closing time"
                    android:inputType="time"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="232dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="424dp"
                android:layout_height="43dp"
                android:text="Saturday"
                android:textSize="40dp"
                tools:layout_editor_absoluteX="-7dp"
                tools:layout_editor_absoluteY="453dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/saturdayOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter opening time"
                    android:inputType="time"
                    android:minHeight="48dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="326dp" />

                <EditText
                    android:id="@+id/saturdayClose"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter closing time"
                    android:inputType="time"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="232dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="431dp"
                android:layout_height="36dp"
                android:text="Sunday"
                android:textSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="541dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sundayOpen"
                    android:layout_width="163dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Enter opening time"
                    android:inputType="time"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="326dp" />

                <EditText
                    android:id="@+id/sundayClose"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter closing time"
                    android:inputType="time"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="232dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnWorkingSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>